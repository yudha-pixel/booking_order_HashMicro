<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="work_order_tree" model="ir.ui.view">
            <field name="name">work.order.tree</field>
            <field name="model">work.order</field>
            <field name="arch" type="xml">
                <tree string="Work Order">
                    <field name="name"/>
                    <field name="booking_order_reference_id"/>
                    <field name="team_id"/>
                    <field name="team_leader_id"/>
                    <field name="team_members_ids"/>
                    <field name="planned_start"/>
                    <field name="planned_end"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="notes"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="work_order_pivot" model="ir.ui.view">
            <field name="name">work.order.pivot</field>
            <field name="model">work.order</field>
            <field name="arch" type="xml">
                <pivot string="Work Order Analysis">
                    <field name="team_id" type="row"/>
                    <field name="state" type="col"/>
                </pivot>
            </field>
        </record>
        
        <record id="work_order_graph" model="ir.ui.view">
            <field name="name">work.order.graph</field>
            <field name="model">work.order</field>
            <field name="arch" type="xml">
                <graph string="Work Order" type="bar">
                    <field name="team_id" type="row"/>
                    <field name="state" type="col"/>
                </graph>
            </field>
        </record>
        
        <record id="work_order_kanban" model="ir.ui.view">
            <field name="name">work.order.kanban</field>
            <field name="model">work.order</field>
            <field name="arch" type="xml">
                <kanban string="Work Order">
                    <templates>
                        <t t-name="kanban-box">
                            <div>
                                <group>
                                    <h4><a type="open"><field name="name"/></a></h4>
                                    <b>Booking Order:</b> <a type="open"><field name="booking_order_reference_id" /></a><br/>
                                    <b>Team:</b> <a type="open"><field name="team_id" /></a>
                                </group>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <record id="work_order_calendar" model="ir.ui.view">
            <field name="name">work.order.calendar</field>
            <field name="model">work.order</field>
            <field name="arch" type="xml">
                <calendar string="Work Order Calender"
                          date_start="planned_start"
                          date_stop="planned_end"
                          color="team_id"
                          mode="month">
                    <field name="name"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>
        
        <record id="work_order_form" model="ir.ui.view">
            <field name="name">work.order.form</field>
            <field name="model">work.order</field>
            <field name="arch" type="xml">
                <form string="Work Order">
                    <header>
                        <button name="action_start_work" states="pending" type="object" string="Start Work" class="oe_highlight"/>
                        <button name="action_end_work" states="in_progress" type="object" string="End Work" class="oe_highlight"/>
                        <button name="action_reset" states="in_progress" type="object" string="Reset" class="btn-danger"/>
                        <button name="action_cancel" type="object" string="Cancel"/>
                        <field name="state" widget="statusbar" statusbar_visible="pending,in_progress,done,cancel"
                               statusbar_colors='{"pending":"blue", "in_progress":"blue", "done":"blue", "cancel":"red"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Lead"/>
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="booking_order_reference_id"/>
                                <field name="team_id"/>
                                <field name="team_leader_id"/>
                                <field name="team_members_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="planned_start"/>
                                <field name="planned_end"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_work_order">
            <field name="name">Work Order</field>
            <field name="res_model">work.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
        </record>

    </data>
</odoo>