<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_wizard_cancel_work_order_form" model="ir.ui.view">
            <field name="name">wizard.cancel.work.order.form</field>
            <field name="model">cancel.work.order</field>
            <field name="arch" type="xml">
                <form string="Cancel Work Order">
                    <label for="notes" string="Reason of Cancellation"/>
                    <group>
                        <field name="notes" nolabel="1"/>
                    </group>
                    <footer>
                        <button string="Confirm" name="process_cancel" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_cancel_work_order" model="ir.actions.act_window">
            <field name="name">Cancel Work Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cancel.work.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>
        
    </data>
</odoo>