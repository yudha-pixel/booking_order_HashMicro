<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_work_order_template">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="report.internal_layout">
                    <div class="page" style="font-size: 20px;">
                        <table width="100%" style="border:1px solid black">
                            <tr style="border-bottom:1px solid black; padding:10px;">
                                <td colspan="4" style="padding:10px">
                                    <span t-esc="o.name"/>
                                </td>
                            </tr>
                            <tr style="border-bottom:1px solid black;">
                                <td style="border-right:1px solid black; padding:10px; width:25%;">Team Name</td>
                                <td style="border-right:1px solid black; padding:10px; width:25%;"><span t-esc="o.team_id.name"/></td>
                                <td style="border-right:1px solid black; padding:10px; width:15%;">Customer</td>
                                <td style="padding:10px; width:35%;"><span t-esc="o.booking_order_reference_id.partner_id.name"/></td>
                            </tr>
                            <tr style="border-bottom:1px solid black;">
                                <td style="border-right:1px solid black; padding:10px;">Booking Order Ref</td>
                                <td style="border-right:1px solid black; padding:10px;"><span t-esc="o.booking_order_reference_id.id"/></td>
                                <td style="border-right:1px solid black; padding:10px;">Date</td>
                                <td style="padding:10px;">
                                    <span t-esc="o.date_start" t-options="{'widget':'date'}"/> -
                                    <span t-esc="o.date_end" t-options="{'widget':'date'}"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4" style="padding:10px;">NOTES:</td>
                            </tr>
                            <tr style="border-bottom:1px solid black">
                                <td colspan="4" style="padding: 5px 10px 40px;"><span t-esc="o.notes"/></td>
                            </tr>
                            <tr>
                                <td colspan="4" style="padding: 10px 10px 60px;">Signature:</td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>